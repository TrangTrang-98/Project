@page
@model Presentation.Pages.Login.Enrollments.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Enrollment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="Enrollment.PatientId" class="control-label"></label>
                <!-- Doctor.DeptId: item can sua-->
                <select asp-for="Enrollment.PatientId" class="form-control"
                        asp-items="@Model.AllPatientId"> <!-- AllDept: ds cacdept hien thi tren select-->
                    <option value="">-- Select Patient --</option>
                </select>
                <span asp-validation-for="Enrollment.PatientId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.DoctorId" class="control-label"></label>
                <!-- Doctor.DeptId: item can sua-->
                <select asp-for="Enrollment.DoctorId" class="form-control"
                        asp-items="@Model.AllDoctorId"> <!-- AllDept: ds cacdept hien thi tren select-->
                    <option value="">-- Select Doctor --</option>
                </select>
                <span asp-validation-for="Enrollment.DoctorId" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Enrollment.EnrollmentDate" class="control-label"></label>
                <input asp-for="Enrollment.EnrollmentDate" class="form-control" />
                <span asp-validation-for="Enrollment.EnrollmentDate" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
