@page
@model Presentation.Pages.Login.Enrollments.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Doctor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Enrollment.PatientId" />
            <div class="form-group">
            
                <label asp-for="Enrollment.DoctorId" class="control-label"></label>
                <input asp-for="Enrollment.DoctorId" class="form-control" />
                <span asp-validation-for="Enrollment.DoctorId" class="text-danger"></span>
            </div>
            <div class="form-group">
            
                <label asp-for="Enrollment.EnrollmentDate" class="control-label"></label>
                <input asp-for="Enrollment.EnrollmentDate" class="form-control" />
                <span asp-validation-for="Enrollment.EnrollmentDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
