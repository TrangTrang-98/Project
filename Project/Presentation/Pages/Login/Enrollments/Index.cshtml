@page
@model Presentation.Pages.Login.Enrollments.IndexModel
@{
    ViewData["Title"] = "Index";
}
<h1>Thông Tin Lịch Đăng Kí</h1>
<p>
    <a asp-page="Create">Create New</a>
</p> 
<form>
    <p>
        <!-- Name: 
        <select asp-for="DoctorPhone" asp-items="Model.Names">
            <option value="">All</option>
        </select> -->
       Find by name:  
        <input type="text" name="searchString" value="@ViewData["searchString"]"/>
        <input type="submit" value="Filter"/>
    </p>
</form>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentPageVM.ListEnrollment[0].PatientId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EnrollmentPageVM.ListEnrollment[0].DoctorId)
            </th>
             <!-- <th>
                @Html.DisplayNameFor(model => model.EnrollmentPageVM.ListEnrollment[0].DeptName)       
            </th> -->
             <th>
                @Html.DisplayNameFor(model => model.EnrollmentPageVM.ListEnrollment[0].EnrollmentDate)       
            </th>

            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.EnrollmentPageVM.ListEnrollment)
{
    <tr>
         <td>
            @Html.DisplayFor(modelItem => item.PatientId)
         </td>
          <td>
            @Html.DisplayFor(modelItem => item.DoctorId)
        </td>
        <!-- <td>
            @Html.DisplayFor(modelItem => item.DeptName)
        </td> -->
          <td>
            @Html.DisplayFor(modelItem => item.EnrollmentDate)
         </td>
         <td>
            <a asp-page="./Edit" asp-route-id="@item.PatientId @item.DoctorId">Edit</a> |
            <a asp-page="./Delete" asp-route-id="@item.PatientId">Delete</a>
        </td>
        
    </tr>
}
    </tbody>
</table>
@{
    var preDisable = Model.EnrollmentPageVM.ListEnrollment.HasPrevious ? "" : "disabled";
    var nextDisable = Model.EnrollmentPageVM.ListEnrollment.HasNext ? "" : "disabled";
}

<div class="container">
    <a  class="btn btn-default @preDisable" 
        asp-route-pageIndex="@(Model.EnrollmentPageVM.ListEnrollment.PageIndex - 1)">Previous</a>

    <a  class="btn btn-default @nextDisable"
        asp-route-pageIndex="@(Model.EnrollmentPageVM.ListEnrollment.PageIndex + 1)">Next</a>
</div>